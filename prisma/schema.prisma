generator client {
  provider = "prisma-client-js"
}

datasource ser {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid()) // ID como UUID (String)
  name     String  @unique
  email    String  @unique
  password String
  telefono String? // Atributo opcional
  isAdmin  Boolean
}

model Ingreso {
  id       Int      @id @default(autoincrement())
  concepto String
  monto    Float
  fecha    DateTime @default(now())
  usuarioId String  // Mantiene usuarioId pero sin relaci√≥n con User
}


