generator client {
  provider = "prisma-client-js"
}

datasource ser {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid()) // Cambiar a UUID para que sea String
  name     String   @unique
  email    String   @unique
  password String
  telefono String?  // Atributo opcional
  isAdmin  Boolean
  ingresos Ingreso[] // Relaci√≥n con Ingreso
}

model Ingreso {
  id        Int      @id @default(autoincrement())
  concepto  String
  monto     Float
  fecha     DateTime @default(now())
  usuario   User     @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  usuarioId String // Cambiado de Int a String
}
